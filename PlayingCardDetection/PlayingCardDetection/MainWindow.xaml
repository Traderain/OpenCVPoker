<Window x:Class="PlayingCardDetection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlayingCardDetection"
        mc:Ignorable="d"
        Title="Playing Card Detection" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <WrapPanel DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="10">
                <Button Name="btnClickMe" Click="btnClickMe_Click">Take picture</Button>
            </WrapPanel>
            <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center">
                <Image Name="ImageDisplay" HorizontalAlignment="Center"></Image>                
            </WrapPanel>
        </DockPanel>
    </Grid>
</Window>
